{% section 'quiz-2' %}
<script src="{{ 'quiz_2.js' | asset_url }}" defer></script>

<script>
  document.body.style.overflow = 'hidden';
  $('#shopify-section-quiz-2').css('display', 'block');
  $('body').css('background-color', 'white');
  document.querySelector('.quiz_2').setAttribute('aria-hidden', false);
</script>

<style>
  .sticky-footer__button {
    background: none !important;
    color: white !important;
    text-align: center !important;
    padding: 0 !important;
    border-radius: 0 !important;
    width: 0 !important;
    transform: none !important;
    transition: none !important;
    display: none !important;
  }

  .sticky-footer__button > * {
    pointer-events: none !important;
  }

  .sticky-footer__button:hover {
    transform: none !important;
  }

  .sticky-footer__button.hide {
    transform: none !important;
  }
  .quiz_2__header {
    display: none !important;
    }
    .quiz_2__inner {
        {% comment %} margin-top: 80px !important; {% endcomment %}
        min-height: 100vh; /* Fallback for browsers that do not support Custom Properties */
        min-height: calc(var(--vh, 1vh) * 100);
    }
  .announcement-bar {
    display: none !important;
    }
    .outer-header-wrapper.scrolled {
    background-color: white !important;
    }
</style>

<script>
// First we get the viewport height and we multiple it by 1% to get a value for a vh unit
let vh = window.innerHeight * 0.01;
// Then we set the value in the --vh custom property to the root of the document
document.documentElement.style.setProperty('--vh', `${vh}px`);
</script>
