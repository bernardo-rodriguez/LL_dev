  "name": "Quiz 2",
  "settings": [
    {
      "type": "textarea",
      "id": "quiz_svg_logo",
      "label": "SVG Logo"
    },
    {
      "type": "link_list",
      "id": "footer",
      "label": "Footer links"
    },
    {
      "type": "textarea",
