<script>
let selectedSquare = null;

function selectSquare(id) {
    // Remove the 'selected' class from the previously selected square, if any
    if (selectedSquare) {
        document.getElementById(selectedSquare).classList.remove('selected');
    }

    // Add the 'selected' class to the currently clicked square
    document.getElementById(id).classList.add('selected');

    // Update the selectedSquare variable
    selectedSquare = id;
}

function getSelectedSquare() {
    return selectedSquare;
}

// Example usage: Log the selected square to the console when a square is clicked
document.querySelectorAll('.dpk_square').forEach(square => {
    square.addEventListener('click', () => {
        console.log('Selected Square:', getSelectedSquare());
    });
});
</script>

