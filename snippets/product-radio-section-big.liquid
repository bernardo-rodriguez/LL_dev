<style>
.custom_rc_wrapper {
  align-items: flex-start;
  display: flex;
  gap: 10px;
}
.custom_rc_product_image {
  max-width: 170px;
  width: 100%
}

.custom_rc_flex_object {
  background-color: #FFFFFF !important;
  z-index: 5;
  overflow: hidden;
  flex: 1;
  align-self: flex-end;
}

.hide_radio_button {
  position: fixed;
  opacity: 0;
  pointer-events: none;
}

.custom_rc_flex_object input:checked ~ label {
  border: 1px solid var(--navy)!important;
}

{% comment %} .inner_radio_wrapper {
  padding: 10px;
} {% endcomment %}

.time_text {
  display:block;
  text-align:center;
}

.option_top_banner {
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  color: white;
  text-align: center;
}

.c_rc_f_o_radio1 {
  border-radius: 15px;
}

.c_rc_f_o_radio2 {
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
}
</style>

